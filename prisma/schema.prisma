generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @default(autoincrement()) @id
  email     String  @unique
  password  String
  units     Int

  Has Has[]
}

model Course {
  code      String   @id
  units     Int
  category  String

  Has Has[]
  Requires Requires[]
  Course PreReq[] @relation(name: "course")
  PreReq PreReq[] @relation(name: "prereq")
}

model Has {
  userId      Int   
  courseCode  String 
  yearQuarter String

  User        User     @relation(fields: [userId], references: [id])
  Course      Course   @relation(fields: [courseCode], references: [code])
  @@id([courseCode, userId])
}

model Degree {
  title   String  @id

  Requires Requires[]
}

model Requires {
  degreeTitle  String
  courseCode   String
  
  Degree      Degree   @relation(fields: [degreeTitle], references: [title])
  Course      Course   @relation(fields: [courseCode], references: [code])
  @@id([degreeName, courseCode])
}

model PreReq {
  preReqCode  String
  courseCode  String
  enforced    Boolean

  Course      Course   @relation(name: "course", fields: [courseCode], references: [code])
  PreReq      Course   @relation(name: "prereq", fields: [preReqCode], references: [code])
  @@id([courseCode, preReqCode])
}

